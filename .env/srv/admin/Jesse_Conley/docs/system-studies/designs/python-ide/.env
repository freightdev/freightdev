# AI Assistant Development Environment Configuration

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Database (using SQLite for development - PostgreSQL optional)
POSTGRES_URL="postgresql+asyncpg://ai_user:dev_password@localhost:5432/ai_assistant"
POSTGRES_PASSWORD="dev_password"

# Secret key for sessions
SECRET_KEY="dev_secret_key_change_in_production_12345678"

# =============================================================================
# APP SETTINGS
# =============================================================================

APP_NAME="AI Assistant IDE"
APP_VERSION="1.0.0"
DEBUG=true
HOST="0.0.0.0"
PORT=8001

# =============================================================================
# MODEL SETTINGS
# =============================================================================

MODELS_DIR="./models"
MAX_CONTEXT_LENGTH=4096
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=512
DEFAULT_MODEL="Llama-3.1-8B-Instruct-Q5_K_M.gguf"

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

DUCKDB_PATH="./data/analytics.duckdb"

# =============================================================================
# MEMORY & EMBEDDINGS SETTINGS
# =============================================================================

EMBEDDINGS_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDINGS_DIMENSION=384
ENABLE_EMBEDDINGS=false
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# WORKSPACE SETTINGS
# =============================================================================

WORKSPACE_DIR="./workspace"
MAX_FILE_SIZE_MB=50

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

KEEP_DATA_LOCAL_ONLY=true
REQUIRE_AUTHENTICATION=false

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

LOG_LEVEL="INFO"
LOG_DIR="./data/logs"

# =============================================================================
# AGENT SETTINGS
# =============================================================================

ENABLE_CHAT_AGENT=true
ENABLE_CODE_AGENT=true
ENABLE_CODRIVER_AGENT=true
AUTO_AGENT_ROUTING=true

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================

GITHUB_TOKEN=""
