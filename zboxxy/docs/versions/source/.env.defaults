#?  ╔═════════════════╗
#?  ║  Default Paths  ║
#?  ╚═════════════════╝

#* ==== ENV PATHS ==== *#
export ENV_DIR=$HOME/.zshenv.d
export SRC_DIR=$HOME/.zshrc.d
export CFG_DIR=$HOME/.config
export BIN_DIR=$HOME/.local/bin

#* ==== DATA PATHS ==== *#
export ARCHIVE_DIR=$DATA_DIR/archives
export BACKUP_DIR=$DATA_DIR/backups

#* ==== KEY PATHS ==== *#
export SSH_KEYS=$HOME/.ssh                    # [expires: 2026-08-07]
export GPG_KEYS=$HOME/.gnupg                  # [expires: N/A]


#?  ╔════════════════════╗
#?  ║  Default Settings  ║
#?  ╚════════════════════╝

#* ==== DATA SETTINGS ==== *#
export ARCHIVE_LOG=$DATA_DIR/.archive.log
export BACKUP_LOG=$DATA_DIR/.backup.logs
export COMPRESS_FORMAT=tar.gz               # Options: tar.gz, tar.xz, zip, 7z
export COMPRESS_LEVEL=9                     # Compression level (1-9)

#* ==== KEY SETTINGS ==== *#
export SSH_LOG=$HOME/.ssh/ssh_helper.log
export SSH_TMP=$HOME/.ssh/.sync_tmp
export SSH_ID=$HOME/.ssh/id_rsa
export SSH_USER=$USER
export SSH_PORT=22
export GPG_TTY="$(tty)"
export gpgconf --launch gpg-agent 2>/dev/null

#* ==== NETWORK SETTINGS ==== *#
export HTTP_PROXY="http://127.0.0.1:3128"
export HTTPS_PROXY="https://127.0.0.1:3128"
export NO_PROXY="localhost,127.0.0.1"